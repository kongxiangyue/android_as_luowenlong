<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumBtnStyle">
        <item name="android:background">@drawable/num_btn</item>
        <item name="android:layout_width">@dimen/num_btn_width</item>
        <item name="android:layout_height">@dimen/num_btn_width</item>
        <item name="android:layout_margin">@dimen/btn_margin</item>
        <item name="android:textSize">@dimen/num_btn_text_size</item>
    </style>


    <style name="OperBtnStyle">
        <item name="android:background">@drawable/operation_btn</item>
        <item name="android:layout_width">@dimen/num_btn_width</item>
        <item name="android:layout_height">@dimen/num_btn_width</item>
        <item name="android:layout_margin">@dimen/btn_margin</item>
        <item name="android:textSize">@dimen/operation_text_size</item>
    </style>

    <style name="ResultEdit">
        <item name="android:text">0.0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">right|center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/num_result_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ffffff</item>
    </style>


</resources>
